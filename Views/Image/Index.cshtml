@model IEnumerable<u2145249_HW03.Models.FileModel>

@{
    ViewBag.Title = "ImageView";
}

<h2>Document of any type</h2>
<p>...media/images/ folder</p>

<div class="jumbotron">
    <div class="row">
        <div class="row">
                    @foreach (var item in Model)
                    {

                    <div class="col-md-4 gallery">
                        <a href="~/Meia/Images/@item.FileName" data-fancybox="gallery" data-caption="@item.FileName">
                            <img src="~/Media/Images/@item.FileName" width="300" />
                        </a>

                        <p width="60">@item.FileName </p>
                        <button class="btn btn-primary btn-success">
                            @Html.ActionLink("Download", "Download",
                             new { fileName = item.FileName })
                        </button>
                        <button type="button" class="btn btn-primary btn-danger">
                            @Html.ActionLink("Delete", "Delete",
                           new { fileName = item.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </div>

                    }
                </div>
                </div>
            </div>
        </div>



